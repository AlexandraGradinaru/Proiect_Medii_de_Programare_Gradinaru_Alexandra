@page
@model Proiect_Medii_de_Programare_Gradinaru_Alexandra.Pages.SkinTypes.IndexModel

@{
    ViewData["Title"] = "Tipuri de Ten";
}

<h1>Tipuri de Ten</h1>

<p>
    <a asp-page="Create">Adauga un tip de ten</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SkinType[0].SkinTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SkinType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SkinTypeName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
